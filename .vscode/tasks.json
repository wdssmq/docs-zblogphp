{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "docsify",
      "type": "shell",
      "command": ["docsify serve docs"],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "lint-md cli",
      "type": "shell",
      "command": "lint-md ./docs --config mdlint.json",
    }
  ]
}
